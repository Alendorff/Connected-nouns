doctype html
html
   head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible" content="IE=edge")
      meta(name="viewport" content="width=device-width, initial-scale=1")
      script(src="/bower_components/jquery/dist/jquery.min.js")
      script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
      script(src="/bower_components/d3/d3.js")
      script(src="/js/main.js")
      script(src="/js/graph.js")
      link(rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
      link(rel="stylesheet" href="/css/all.css")
      title "DS Lab 1"
   body
      main.container-fluid
         .row
            #leftpanels.col-xs-5.col-lg-4
               #search.row
                  input(type="text" placeholder="Enter the word...").col-xs-8
                  button.btn.btn-primary.search-button.col-xs-2(onclick="getWords()")
                     span.glyphicon.glyphicon-search
                  button.btn.btn-primary.search-button.col-xs-2.disabled(onclick="drawGraph(currentWord)")
                     span.glyphicon.glyphicon-picture
               #words-container.row
                  ul#words.col-xs-4.pre-scrollable
                  ul#primary-links.col-xs-4.pre-scrollable
                  ul#secondary-links.col-xs-4.pre-scrollable
            #rightpanels.col-xs-7.col-lg-8
               #graph.col-xs-12
               #info.col-xs-12.pre-scrollable